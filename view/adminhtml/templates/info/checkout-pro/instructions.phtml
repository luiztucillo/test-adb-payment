            <?php if ($status): ?>
                <tr>
                    <th scope="row">
                        <?= $block->escapeHtml(__('Status (Mercado Pago)')); ?>
                    </th>
                    <td>
                        <?= $block->escapeHtml(__($status)) ?>
                    </td>
                </tr>
            <?php endif; ?>
            <?php if ($statusDetail): ?>
                <tr>
                    <th scope="row">
                        <?= $block->escapeHtml(__('Status Detail (Mercado Pago)')); ?>
                    </th>
                    <td>
                        <?= $block->escapeHtml(__($statusDetail)) ?>
                    </td>
                </tr>
            <?php endif; ?>
